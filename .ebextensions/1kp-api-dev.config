packages:
  yum:
    postgresql93: []
    postgresql93-devel: []

container_commands:
  01_setup_postgres:
    command: "source /opt/python/run/venv/bin/activate && python manage.py setup"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    "PYTHONPATH": "/opt/python/current/app:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: wsgi.py